<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_marginLeft="@dimen/spacing_small"
    android:layout_marginRight="@dimen/spacing_small"
    android:layout_marginBottom="@dimen/spacing_medium"
    android:layout_marginTop="@dimen/spacing_medium"
    card_view:cardCornerRadius="10dp"
    card_view:contentPadding="@dimen/spacing_small"
    card_view:cardElevation="10dp"
    card_view:cardMaxElevation="15dp">

    <LinearLayout android:orientation="vertical"
    android:id="@+id/order_list_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_small">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

    <TextView
        android:layout_margin="@dimen/spacing_small"
        android:id="@+id/order_type"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="Bluk/Single Order #1 info"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

        <Button
            android:id="@+id/orders_delete"
            android:layout_width="36dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:soundEffectsEnabled="true"
            android:background="@drawable/ic_delete_black_24dp"
            android:visibility="gone"
            />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/spacing_small">

    <TextView
        android:layout_weight="1"
        android:id="@+id/order_cdate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:text="order cdate"/>

    <TextView
        android:layout_weight="1"
        android:id="@+id/order_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/red_A700"
        android:text="Total Rs.afaf"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/spacing_small">

    <TextView
        android:id="@+id/order_client"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="testclient"
        android:textColor="@color/green_900"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:layout_gravity="center_vertical"
        />
    <TextView
        android:layout_gravity="center_vertical"
        android:id="@+id/order_vendor"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="testvendor"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@android:color/darker_gray"
        />
    </LinearLayout>

    <TextView
        android:id="@+id/order_misc_details"
        android:layout_margin="@dimen/spacing_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Credit:0   Commision:1531 Labour charges:12151"
        android:textSize="6pt"
        android:textStyle="bold"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/spacing_middle"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="@dimen/spacing_middle">

            <Button
                android:id="@+id/order_accept"
                style="@style/Button.Primary.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_rect_teal"
                android:text="Accept"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:soundEffectsEnabled="true"
                app:fontFamily="sans-serif" />

            <View
                android:layout_width="@dimen/spacing_large"
                android:layout_height="0dp"
                android:background="@color/blue_800"
                />

            <Button
                android:id="@+id/order_decline"
                style="@style/Button.Primary.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_rect_red_outline"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:text="Reject"
                android:textAllCaps="false"
                android:textColor="@color/red_900"
                android:soundEffectsEnabled="true"
                app:fontFamily="serif" />

        </LinearLayout>

</LinearLayout>


</androidx.cardview.widget.CardView>